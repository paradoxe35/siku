{
    "compilerOptions": {
        "jsx": "react",
        "experimentalDecorators": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "module": "esnext",
        "target": "es5",
        "paths": {
            "@/*": [
                "assets/*"
            ],
            "@lib/*": [
                "assets/lib/*"
            ],
            "@js/*": [
                "assets/js/*"
            ],
            "@admin/*": [
                "assets/js/admin/*"
            ],
            "@sass/*": [
                "assets/sass/*"
            ],
            "@img/*": [
                "assets/img/*"
            ],
            "@fonts/*": [
                "assets/img/fonts/*"
            ],
        }
    },
    "include": [ "assets/**/*"],
    "exclude": ["node_modules"]
}
